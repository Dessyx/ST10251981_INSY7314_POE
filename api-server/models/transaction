// models/transaction.js

const db = require('../database');

class Transaction {
  static async getAll() {
    return db('transactions').select('*');
  }

  static async create({ user_id, amount, currency, swift_code = null, recipient_name = null, status = null, description = "" }) {
    const [id] = await db('transactions').insert({
      user_id,
      amount,
      currency,
      swift_code,
      recipient_name,
      status,
      description,
      created_at: db.fn.now(),
      updated_at: db.fn.now()
    });
    return db('transactions').where({ id }).first();
  }
}

module.exports = Transaction;
